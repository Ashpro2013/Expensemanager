<div class="card  small" style="max-width: 540px;background-color:@Color">
  <div class="row g-0">
    <div class="col-md-4">
      <img src=@ImageUrl class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <p class="card-text"></p>
        <p class="card-text"><small class="text-muted">@Value</small></p>
      </div>
    </div>
  </div>
</div>

@code {
    [Parameter]
    public string Color { get; set; } = "azure";
    [Parameter]
    public string ImageUrl { get; set; }
    [Parameter]
    public string Title { get; set; }
     [Parameter]
    public string Value { get; set; }
}
